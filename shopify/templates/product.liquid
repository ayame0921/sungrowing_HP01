{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}
<div class="shop-description">
  <div class="shop-description-row">
    <div class="img-content">
      <ul class="slider">
        <li><img src="{{ product.images[1] | img_url: '600x600' }}" alt="{{product.images[0].alt}}" /></li>
        <li><img src="{{ product.images[2] | img_url: '600x600' }}" alt="{{product.images[0].alt}}" /></li>
        <li><img src="{{ product.images[3] | img_url: '600x600' }}" alt="{{product.images[0].alt}}" /></li>
        
      </ul>
    </div>
    <div class="discription-box">
      <div class="discription">
        <div class="item-text">
          <h2>{{ product.title }}</h2>
          <h6>{{ current_variant.price | money }}</h6>
          <div class="item-discription">
            {{ product.description }}
          </div>
        </div>

        <form action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm" class="add-cart">
          <div class="form-row">
            <div class="form-group d-flex">
              <label for="id">type</label>
              <select name="id" id="productSelect" class="form-control">
                {% for variant in product.variants %}
                {% if variant.available %}
                <option value="{{ variant.id }}">
                  {{ variant.title }}
                  <!--  - {{ variant.price | money_with_currency }} -->
                </option>
                {% else %}
                <option disabled="disabled">
                  {{ variant.title }} - sold out
                </option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
            <div class="form-group d-flex">
              <label for="number">quantity</label>
              <input type="number" id="Quantity" name="quantity" class="form-control" value="1" min="1">
            </div>
          </div>
          <button type="submit" name="add" id="AddToCart">ADD CART</button>
        </form>
        <div class="detail">
          <h3>Detail</h3>
          <div class="detail-content">
            <div class="detail-list">
              <div class="row">
                <p class="l">原産国</p>
                <p class="r">{{ product.metafields.my_fields._gensannkoku }}</p>
              </div>
              <div class="row">
                <p class="l">素材</p>
                <p class="r">{{ product.metafields.my_fields._sozai }}</p>
              </div>
              <div class="row">
                <p class="l">特徴</p>
                <p class="r">{{ product.metafields.my_fields._tokutyo }}</p>
              </div>
              <div class="row">
                <p class="l">関連カテゴリー</p>
                <p class="r">{{ product.metafields.my_fields._kannrenn }}</p>
              </div>
              <div class="row">
                <p class="l">性別タイプ</p>
                <p class="r">{{ product.metafields.my_fields._seibetu }}</p>
              </div>
              <div class="row">
                <p class="l">即日</p>
                <p class="r">{{ product.metafields.my_fields._sokujitu }}</p>
              </div>
              <div class="row">
                <p class="l">送料</p>
                <p class="r">{{ product.metafields.my_fields._souryou }}</p>
              </div>
              <div class="row">
                <p class="l">ギフト</p>
                <p class="r">{{ product.metafields.my_fields._gift }}</p>
              </div>
              <div class="row">
                <p class="l">お問い合わせ番号</p>
                <p class="r">{{ product.metafields.my_fields._contact }}</p>
              </div>
            </div>

          </div>
        </div>
        <div class="shop-description-content">
          <div class="sub-img">
            <ul>
              
              <img src="{{ product.images[4] | img_url: '600x600' }}" alt="{{product.images[0].alt}}" />
              <img src="{{ product.images[5] | img_url: '600x600' }}" alt="{{product.images[0].alt}}" />
            </ul>
          </div>
          <div class="main-img">
            <img src="{{ product.images[6] | img_url: '600x600' }}" alt="{{product.images[0].alt}}" />          </div>
          <div class="main-img">
            <img src="{{ product.images[7] | img_url: '600x600' }}" alt="{{product.images[0].alt}}" />        </div>
          <div class="review">
            <div id="shopify-product-reviews" data-id="{{product.id}}">{{ product.metafields.spr.reviews }}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
