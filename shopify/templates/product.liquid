  <div class="chapter">
      <div class="CBoxL" id="mainvisual">
          {{ 'chapter1.jpg' | asset_url | img_tag }}
          <div class="SP">Chapter 1: <br class="SP">ありのままの美しさ</div>
      </div>
      <div class="CBoxR">
          <div class="textBox">
              <h2>Special Collection</h2>
